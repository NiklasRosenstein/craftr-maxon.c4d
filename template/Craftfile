setdefault('debug', False, set_global=True)
append_search_path('..')
load_module('maxon.c4d')

objects = maxon.c4d.objects(
  sources = glob('source/**/*.cpp'),
  options = dict(
    includes = [local('plugin'), local('include')],
  ),
)

plugin = maxon.c4d.plugin(
  filename = local('plugin/{}'.format(module.identifier)),
  inputs = [maxon.c4d.library, objects],
)
