from craftr import session, path
from craftr.ext.maxon import c4d

objects = c4d.objects(
  sources = path.glob('source/**/*.cpp'),
  includes = path.local(['plugin', 'include']),
)

plugin = c4d.link(
  output = path.local('plugin/{}'.format(__ident__)),
  inputs = objects,
)
